{
    "compilerOptions": {
      "outDir": "dist",
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@/*": [
          "./*"
        ]
      },
      "esModuleInterop": true,
      "allowJs": true,
      "allowImportingTsExtensions": true,
      "noEmit": true
    },
    "include": [
      "src",
      "index.js",
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  